<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : asset_path('adrian-cogua-oWrskhOkZtY-unsplash.jpg') %>)">
</div>

<div class="container">
  <div class="card-title">
  <%=link_to "Add new movie", new_list_bookmark_path(@list), class: "btn btn-primary"%>
  <%=link_to "Delete list", list_path(@list), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?'}%>
  <%=link_to "Back to homepage", lists_path, class: "btn btn-secondary"%>
  </div>
</div>

<div class="content">
<div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="col-12 col-lg-8">
        <div class="card">
        <img src="<%= bookmark.movie.poster_url%> "class="card-img-top"/>
        <h3><%=bookmark.movie.title %></h3>
        <p><strong>Overview:</strong> <%=bookmark.movie.overview %></p>
        <p><strong>Comment:</strong> <%=bookmark.comment %></p>
        <p><strong>Rating:</strong> <%= bookmark.movie.rating %></p>
        <%= link_to 'Delete',
                    bookmark_path(bookmark),
                    method: :delete,
                    class: "btn btn-danger",
                    data: { confirm: 'Are you sure?'} %>
    </div>
        </div>
    <% end %>
  </div>
</div>
